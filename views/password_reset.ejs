<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>
                        <div class="panel-body">

                            <form id="register-form" role="form" autocomplete="off" class="form" method="post"
                                action="/users/reset-password">
                                <div class="form-group">

                                    <input name="newPassword" placeholder="Enter new Password" class="form-control mt-3"
                                        type="password" required />
                                    <input name="confirmNewPassword" placeholder="Confirm Password"
                                        class="form-control mt-3" type="password" required />

                                </div>
                                <div class="form-group mt-5">
                                    <button class="btn btn-lg btn-primary btn-block" type="submit"> Reset Password
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>